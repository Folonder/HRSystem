@model Domain.Entities.EmployeeHistory

@{
    ViewData["Title"] = "Нанять сотрудника";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="HireEmployee">
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label">Сотрудник</label>
        <select asp-for="EmployeeId" asp-items="@ViewBag.Employees" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="control-label">Дата наема</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>
    <p></p>
    <div class="form-group">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="submit" value="Нанять" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</form>