@model Domain.Entities.Department

@{
    ViewData["Title"] = "Подробности департамента";
}

<h1>Подробновсти подразделения</h1>

<div>
    <h4>Подразделение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Родительское подразделение
        </dt>
        <dd class="col-sm-10">
            @(Model.ParentDepartment != null ? Model.ParentDepartment.Name : "Нет родительского подразделения")
        </dd>
    </dl>
</div>
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" >Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>